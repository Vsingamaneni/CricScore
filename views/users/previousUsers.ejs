<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="css/dashboard.css">
    <link rel="stylesheet" href="css/schedule.css">
    <%- include('../header.ejs') %>
</head>
<body style="background-color: #f6f7fa;">

<div>
    <%- include('../body.ejs') %>
    <div class="content" style="background-color:#f6f7fa">
        <br><br><br><br><br><br>
        <div class="container">
            <% if(typeof alert != 'undefined') { %>
                <br/>
                <% alert.forEach(function(error) { %>
                    <div style="color:red;text-align: center;font-size: 15px; font-weight: 900; font-family: Roboto, sans-serif;"
                         role="alert">
                        <%= error.msg %>
                    </div>
                    <br><br><br>
                <% }) %>
            <% } %>
            <% if(typeof msg != 'undefined') { %>
                <br/>
                <% msg.forEach(function(success) { %>
                    <div style="color:#5b5d5d;text-align: center;font-size: 25px; font-weight: 900; font-family: Roboto, sans-serif;"
                         role="alert">
                        <i><%= success %></i>
                    </div>
                    <br><br><br>
                <% }) %>
            <% } %>

                <table class="table table-dark table-striped" style="width: 15%;">
                    <thead>
                    <tr style="background-color: #5b5d5d;font-size: 18px;">
                        <th><i><a onMouseOver="this.style.color='#18dbdb'" href="/previousStandings" style="text-decoration: none;color: white;">2020 STANDINGS</a></i></th>
                    </tr>
                    </thead>
                </table>
                <br><br>

            <% if (users.bothYears.length > 0) { %>
                <h1 style="text-align: center; color: #19B3D3;"><i> Users from Previous & Current season </i></h1>
                <table class="table table-dark table-striped">
                    <thead>
                    <tr style="background-color: #5b5d5d;font-size: 18px;">
                        <th><i>#</i></th>
                        <th><i>Name</i></th>
                        <th><i>Favourite</i></th>
                        <th><i>Location</i></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr style="height: 10px;"></tr>
                    <% users.bothYears.forEach(function(user){ %>
                        <tr style="font-size: 18px;">
                            <td><%= user.rank %></td>
                            <td><%= user.fname %> <%= user.lname %></td>
                            <td><%= user.selectedTeam %></td>
                            <td><%= user.country %></td>
                        </tr>
                    <% }); %>

                    </tbody>
                </table>
            <% } %>
            <br><br>
            <% if (users.thisYear.length > 0) { %>
                <h1 style="text-align: center; color: #19B3D3;"><i> New Users </i></h1>
                <table class="table table-dark table-striped">
                    <thead>
                    <tr style="background-color: #5b5d5d;font-size: 18px;">
                        <th><i>#</i></th>
                        <th><i>Name</i></th>
                        <th><i>Favourite</i></th>
                        <th><i>Location</i></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr style="height: 10px;"></tr>
                    <% users.thisYear.forEach(function(user){ %>
                        <tr style="font-size: 18px;">
                            <td><%= user.rank %></td>
                            <td><%= user.fname %> <%= user.lname %></td>
                            <td><%= user.selectedTeam %></td>
                            <td><%= user.country %></td>
                        </tr>
                    <% }); %>

                    </tbody>
                </table>
            <% } %>
            <br><br>

            <% if (users.disCountinued.length > 0) { %>
                <h1 style="text-align: center; color: #19B3D3;"><i> Discontinued / Not Registered Users </i></h1>
                <table class="table table-dark table-striped">
                    <thead>
                    <tr style="background-color: #5b5d5d;font-size: 18px;">
                        <th><i>#</i></th>
                        <th><i>Name</i></th>
                        <th><i>Email</i></th>
                        <th><i>Location</i></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr style="height: 10px;"></tr>
                    <% users.disCountinued.forEach(function(user){ %>
                        <tr style="font-size: 18px;">
                            <td><%= user.rank %></td>
                            <td><%= user.fname %> <%= user.lname %></td>
                            <td><%= user.email %></td>
                            <td><%= user.country %></td>
                        </tr>
                    <% }); %>

                    </tbody>
                </table>
            <% } %>
                <br><br>
        </div>

    </div>
</div>

</body>
</html>