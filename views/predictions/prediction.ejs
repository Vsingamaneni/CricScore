<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/schedule.css">
    <%- include('../header.ejs') %>
</head>
<body style="background-color: #f6f7fa;">

<div>
    <%- include('../body.ejs') %>
    <div class="content" style="background-color:#f6f7fa">
        <br><br><br><br>
        <br><br><br><br>

        <div class="container">
            <% if(typeof alert != 'undefined') { %>
                <br/>
                <% alert.forEach(function(error) { %>
                    <div style="color:red;text-align: center;font-size: 15px; font-weight: 900; font-family: Roboto, sans-serif;" role="alert">
                        <%= error.msg %>
                    </div>
                <br><br><br>
                <% }) %>
            <% } %>
            <% if(typeof msg != 'undefined') { %>
                    <br/>
                    <% msg.forEach(function(success) { %>
                        <div style="color:#6bec10;text-align: center;font-size: 25px; font-weight: 900; font-family: Roboto, sans-serif;" role="alert">
                            <%= success %>
                        </div>
                        <br><br><br>
                    <% }) %>
                <% } %>
            <% if(typeof fail != 'undefined') { %>
                    <br/>
                    <% fail.forEach(function(failed) { %>
                        <div style="color:#ec1022;text-align: center;font-size: 25px; font-weight: 900; font-family: Roboto, sans-serif;" role="alert">
                            <%= failed %>
                        </div>
                        <br><br><br>
                    <% }) %>
                <% } %>
            <table class="table table-dark table-striped">
                <thead>
                <tr style="background-color: #5b5d5d;font-size: 18px;">
                    <th><i>DAY</i></th>
                    <th><i>DEADLINE</i></th>
                    <th><i># GAMES</i></th>
                    <th><i>PREDICTION STATUS</i></th>
                    <th><i>ACTION</i></th>
                </tr>
                </thead>
                <tbody>
                <tr style="height: 10px;"></tr>
                <% schedule.forEach(function(match){ %>
                    <tr style="font-size: 18px;">
                        <td><%= match.matchDay %></td>
                        <td><%= match.deadline %></td>
                        <td><%= match.games %></td>
                        <td><% if (match.allow !== undefined && match.allow) { %>
                                <i>Not Predicted</i>
                            <% } %>
                            <% if (match.allow !== undefined && !match.allow) { %>
                                <i>Predicted</i>
                            <% } %>
                        </td>
                        <td> <% if (match.allow !== undefined && match.allow) { %>
                                <a href="/predict/<%= match.matchNumber %>/<%= memberId %>/<%= match.matchDay %>/<%= type %>" class="predict_btn">Predict</a>
                            <% } %>
                            <% if (match.allow !== undefined && !match.allow) { %>
                                <a href="/updatePredictions/<%= match.matchNumber %>/<%= memberId %>/<%= match.matchDay %>/<%= type %>" class="predicted_btn">Update</a>
                            <% } %>
                        </td>
                    </tr>
                    <tr style="height: 20px;"></tr>
                <% }); %>
                </tbody>
            </table>
        </div>

    </div>
</div>

</body>
</html>