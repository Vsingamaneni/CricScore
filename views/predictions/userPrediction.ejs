<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/schedule.css">
    <%- include('../header.ejs') %>
</head>
<body style="background-color: #f6f7fa;">

<div>
    <%- include('../body.ejs') %>
    <div class="content" style="background-color:#f6f7fa">
        <br><br><br><br>
        <br><br><br><br>

        <% if(typeof msg != 'undefined') { %>
            <br/>
            <% msg.forEach(function(success) { %>
                <div style="color:#6bec10;text-align: center;font-size: 25px; font-weight: 900; font-family: Roboto, sans-serif;" role="alert">
                    <%= success %>
                </div>
                <br><br><br>
            <% }) %>
        <% } %>

        <div class="container">
            <table class="table table-dark table-striped">
                <thead>
                <tr style="background-color: #5b5d5d;font-size: 18px;">
                    <th><i>MATCH #</i></th>
                    <th><i>GAME</i></th>
                    <th><i>DEADLINE</i></th>
                    <th><i>PREDICTED TIME</i></th>
                    <th><i>SELECTED</i></th>
                    <th><i>ACTION</i></th>
                </tr>
                </thead>
                <tbody>
                <tr style="height: 10px;"></tr>
                <% viewPredictions.forEach(function(match){ %>
                    <tr style="font-size: 18px;">
                        <td><%= match.matchNumber %></td>
                        <td><%= match.game %></td>
                        <td><%= match.deadline %></td>
                        <td><%= match.predictedTime %></td>
                        <td><%= match.selected %></td>
                        <td> <% if (match.allow !== undefined && match.allow) { %>
                                <a href="/predictGame/<%= match.matchNumber %>/<%= memberId %>/<%= match.matchDay %>/<%= type %>" class="predict_btn">Predict</a>
                            <% } %>
                            <% if (match.allow !== undefined && !match.allow) { %>
                                <a href="/updatePredictions/<%= match.matchNumber %>/<%= memberId %>/<%= match.matchDay %>/<%= type %>" class="predicted_btn">Update</a>
                            <% } %>
                        </td>
                    </tr>
                    <tr style="height: 20px;"></tr>
                <% }); %>
                </tbody>
            </table>
        </div>

    </div>
</div>

</body>
</html>